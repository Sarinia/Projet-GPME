{% extends 'base.html.twig' %}

{% block body %}

    {# Affichage du tableau des administrateurs #}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">PrÃ©nom</th>
                <th scope="col">Email</th>
                <th scope="col">Etablissement</th>
                <th scope="col">Actif</th>
            </tr>
        </thead>
        <tbody>
            {% if result is defined %}
                {% for admin in result %}
                    <tr>
                        <td><a href="{{ path('admin_modify', {'id': admin.id,}) }}">{{ admin.user.id }}</a></td>
                        <td><a href="{{ path('admin_modify', {'id': admin.id,}) }}">{{ admin.user.firstName }}</a></td>
                        <td><a href="{{ path('admin_modify', {'id': admin.id,}) }}">{{ admin.user.lastName }}</a></td>
                        <td><a href="{{ path('admin_modify', {'id': admin.id,}) }}">{{ admin.user.email }}</a></td>
                        <td><a href="{{ path('establishment_modify', {'id': admin.establishment.id,}) }}">{{ admin.establishment.name }}</a></td>
                        <td><a class="{% if admin.user.exist == 1 %}text-success{% else %}text-danger{% endif %}" href="{{ path('admin_modify', {'id': admin.user.id, 'slug': admin.user.slug}) }}">{% if admin.user.exist == 1 %} oui {% else %} non {% endif %}</a></td>
                    </tr> 
                {% endfor %}
            {% else %}
                {% for admin in admins %}
                    <tr>
                        <td><a href="{{ path('admin_modify', {'id': admin.id,}) }}">{{ admin.user.id }}</a></td>
                        <td><a href="{{ path('admin_modify', {'id': admin.id,}) }}">{{ admin.user.firstName }}</a></td>
                        <td><a href="{{ path('admin_modify', {'id': admin.id,}) }}">{{ admin.user.lastName }}</a></td>
                        <td><a href="{{ path('admin_modify', {'id': admin.id,}) }}">{{ admin.user.email }}</a></td>
                        <td><a href="{{ path('establishment_modify', {'id': admin.establishment.id,}) }}">{{ admin.establishment.name }}</a></td>
                        <td><a class="{% if admin.user.exist == 1 %}text-success{% else %}text-danger{% endif %}" href="{{ path('admin_modify', {'id': admin.user.id, 'slug': admin.user.slug}) }}">{% if admin.user.exist == 1 %} oui {% else %} non {% endif %}</a></td>
                    </tr> 
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
{% endblock %}
