{% extends 'base.html.twig' %}

{% block body %}

{# Affichage du tableau des administrateurs #}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Pr√©nom</th>
            <th scope="col">Date de naissance</th>
            <th scope="col">Actif</th>
        </tr>
    </thead>
    <tbody>        
        {% for user in users %}
            {% for role in user.roles %}
                {% if role == 'ROLE_ADMIN' %}
                    <tr>
                        <td><a href="{{ path('admin_modify', {'id': user.id, 'slug': user.slug}) }}">{{ user.firstName }}</a></td>
                        <td><a href="{{ path('admin_modify', {'id': user.id, 'slug': user.slug}) }}">{{ user.lastName }}</a></td>
                        <td><a href="{{ path('admin_modify', {'id': user.id, 'slug': user.slug}) }}">{{ user.birthDate | date('d/m/Y') }}</a></td>
                        <td><a class="{% if user.exist == 1 %}text-success{% else %}text-danger{% endif %}" href="{{ path('admin_modify', {'id': user.id, 'slug': user.slug}) }}">{% if user.exist == 1 %} oui {% else %} non {% endif %}</a></td>
                    </tr> 
                {% endif %}              
            {% endfor %}
        {% endfor %}
    </tbody>
</table>
{% endblock %}
