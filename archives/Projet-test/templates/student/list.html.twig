{% extends 'base.html.twig' %}

{% block body %}

<!-- Affichage du tableau des étudiants pour l'admin et le sadmin -->
{% if app.user.roles[0] == "ROLE_ADMIN" or app.user.roles[0] == "ROLE_SADMIN" %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Date de naissance</th>
                <th scope="col">Actif</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {% for role in user.roles %}
                    {% if role == 'ROLE_USER'%}
                    <tr>
                        <td><a href="{{ path('student_modify', {'id': user.id, 'slug': user.slug}) }}">{{ user.firstName }}</a></td>
                        <td><a href="{{ path('student_modify', {'id': user.id, 'slug': user.slug}) }}">{{ user.lastName }}</a></td>
                        <td><a href="{{ path('student_modify', {'id': user.id, 'slug': user.slug}) }}">{{ user.birthDate | date('d/m/Y') }}</a></td>
                        <td><a class="{% if user.exist == 1 %}text-success{% else %}text-danger{% endif %}" href="{{ path('student_modify', {'id': user.id, 'slug': user.slug}) }}">{% if user.exist == 1 %} oui {% else %} non {% endif %}</a></td>
                    </tr>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </tbody>
</table>

<!-- Affichage Affichage du tableau des étudiants pour l'enseignant -->
{% elseif app.user.roles[0] == "ROLE_TEACHER" %}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Date de naissance</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            {% for role in user.roles %}
                {% if role == 'ROLE_USER' and user.exist == 1 %}
                    <tr>
                        <td><a href="{{ path('student_modify', {'id': user.id, 'slug': user.slug}) }}">{{ user.firstName }}</a></td>
                        <td><a href="{{ path('student_modify', {'id': user.id, 'slug': user.slug}) }}">{{ user.lastName }}</a></td>
                        <td><a href="{{ path('student_modify', {'id': user.id, 'slug': user.slug}) }}">{{ user.birthDate | date('d/m/Y') }}</a></td>
                    </tr>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </tbody>
</table>
{% endif %}
{% endblock %}
