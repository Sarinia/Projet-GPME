{% extends 'base.html.twig' %}

{% block body %}

    {# Affichage du tableau des enseignants #}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Pr√©nom</th>
                <th scope="col">Email</th>
                <th scope="col">classe(s)</th>
                <th scope="col">Etablissement</th>
                <th scope="col">Actif</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
                <tr>
                    <td><a href="{{ path('teacher_show', {'id': teacher.id,}) }}">{{ teacher.id }}</a></td>
                    <td><a href="{{ path('teacher_show', {'id': teacher.id,}) }}">{{ teacher.user.firstName }}</a></td>
                    <td><a href="{{ path('teacher_show', {'id': teacher.id,}) }}">{{ teacher.user.lastName }}</a></td>
                    <td><a href="{{ path('teacher_show', {'id': teacher.id,}) }}">{{ teacher.user.email }}</a></td>
                    <td>
                        <ul class="m-0 p-0">
                            {% for classroom in teacher.classrooms %}
                                <li class="list-unstyled m-0">
                                    <a href="{{ path('classroom_show', {'id': classroom.id,}) }}">{{ classroom.degree }}</a>
                                </li>
                            {% endfor %}
                        </ul>     
                    </td>
                    <td><a href="{{ path('establishment_modify', {'id': teacher.establishment.id}) }}">{{ teacher.establishment.name }}</a></td>
                    <td><a class="{% if teacher.user.exist == 1 %}text-success{% else %}text-danger{% endif %}" href="{{ path('teacher_show', {'id': teacher.id}) }}">{% if teacher.user.exist == 1 %} oui {% else %} non {% endif %}</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}