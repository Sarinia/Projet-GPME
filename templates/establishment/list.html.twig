{% extends 'base.html.twig' %}

{% block body %}

    {# Affichage du tableau des établissements #}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Adresse</th>
                <th scope="col">Code postal</th>
                <th scope="col">Ville</th>
                <th scope="col">Département</th>
                <th scope="col">Créé le</th>
                <th scope="col">Actif</th>
            </tr>
        </thead>
        <tbody>
            {% for establishment in establishments %}
                <tr>
                    <td><a href="{{ path('establishment_show', {'id': establishment.id,}) }}">{{ establishment.id }}</a></td>
                    <td><a href="{{ path('establishment_show', {'id': establishment.id,}) }}">{{ establishment.name }}</a></td>
                    <td><a href="{{ path('establishment_show', {'id': establishment.id,}) }}">{{ establishment.adress }}</a></td>
                    <td><a href="{{ path('establishment_show', {'id': establishment.id,}) }}">{{ establishment.postalcode }}</a></td>
                    <td><a href="{{ path('establishment_show', {'id': establishment.id,}) }}">{{ establishment.city }}</a></td>
                    <td><a href="{{ path('department_show', {'id': establishment.department.id}) }}">{{ establishment.department.name }}</a></td>
                    <td><a href="{{ path('establishment_show', {'id': establishment.id,}) }}">{{ establishment.createdAt | date('d/m/Y') }}</a></td>
                    <td><a class="{% if establishment.exist == 1 %}text-success{% else %}text-danger{% endif %}" href="{{ path('establishment_show', {'id': establishment.id}) }}">{% if establishment.exist == 1 %} oui {% else %} non {% endif %}</a></td>
                </tr>  
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
