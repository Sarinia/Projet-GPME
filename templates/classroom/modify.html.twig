{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

	{% block body %}

		{# formulaire de modification d'une classe #}
		{{ form_start(form) }}
		{% if app.user.title == 'ROLE_SADMIN' %}
			<div class="form-group">
				<label class="required" for="establishment">Sélectionner l'établissement : </label>
				<select class="form-control" id="establishment" name="establishment">
					{% for establishment in establishments %}{% set selected = "" %}
						{% if establishment.id == classroom.establishment.id %}{% set selected = "selected" %}
						{% endif %}
						<option value="{{establishment.id}}" {{selected}}>{{establishment.name}} ({{establishment.department.name}})</option>
					{% endfor %}
				</select>
			</div>
		{% endif %}
		{{ form_row(form.degree, {'label':'Diplôme :'}) }}
		{{ form_row(form.startDate, {'label':'Date de début :'}) }}
		{{ form_row(form.endDate, {'label':'Date de fin :'}) }}
		{{ form_row(form.exist, {'label':'Activer la classe :'}) }}
		{{ form_row(form.save, {'label':'Mettre à jour'}) }}
		{{ form_end(form) }}

	{% endblock %}
