{% extends 'base.html.twig' %}

{% block body %}

	<div class="row">
		<div class="col-2">
			<div class="list-group" id="list-tab" role="tablist">
				<a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">Mes demandes de discussion</a>
				<a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Mes discussions créées</a>
			</div>
		</div>
		<div class="col-10">
			<div class="tab-content" id="nav-tabContent">
				<div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
					<table class="table table-striped">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Sujet</th>
								<th scope="col">Expéditeur</th>
								<th scope="col">Créée le</th>
								<th scope="col">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for tchatRecipient in tchatsRecipient %}
								<tr>
									<td>{{tchatRecipient.id}}</td>
									<td>{{tchatRecipient.topic}}</td>
									<td>{{tchatRecipient.forwarder.LastName}} {{tchatRecipient.forwarder.FirstName}}</td>
									<td>{{tchatRecipient.createdAt | date('d/m/Y')}}</td>
									<td class="py-1">
										<a href="{{ path('tchat_show', {id : tchatRecipient.id}) }}" class="btn btn-sm btn-primary my-1" data-toggle="tooltip" data-placement="top" title="Voir"><i class="far fa-file-alt"></i></a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">
					<table class="table table-striped">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Sujet</th>
								<th scope="col">Destinataire</th>
								<th scope="col">Créée le</th>
								<th scope="col">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for tchatForwarder in tchatsForwarder %}
								<tr>
									<td>{{tchatForwarder.id}}</td>
									<td>{{tchatForwarder.topic}}</td>
									<td>{{tchatForwarder.recipient.LastName}} {{tchatForwarder.recipient.FirstName}}</td>
									<td>{{tchatForwarder.createdAt | date('d/m/Y')}}</td>
									<td class="py-1">
										<a href="{{ path('tchat_show', {id : tchatForwarder.id}) }}" class="btn btn-sm btn-primary my-1" data-toggle="tooltip" data-placement="top" title="Voir"><i class="far fa-file-alt"></i></a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
