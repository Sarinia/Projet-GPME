{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

	{% block body %}

		{# formulaire de création d'un administrateur #}
		{{ form_start(form) }}

		<div class="form-group">
			<label for="establishment">Selectionner l'établissement :</label>
			<select class="form-control" id="establishment" name="establishment_choice">
				{% for establishment in establishments %}
					<option value="{{establishment.id}}">{{establishment.name}}</option>
				{% endfor %}
			</select>
		</div>

		{{ form_row(form.user.lastName, {'label':'Nom :'}) }}
		{{ form_row(form.user.firstName, {'label':'Prénom :'}) }}
		{{ form_row(form.user.email, {'label':'Email :'}) }}
		{{ form_row(form.user.exist, {'label':"Activer l'administrateur :"}) }}

		<button class="btn btn-primary">Enregistrer l'administrateur</button>

		{{ form_end(form) }}

	{% endblock %}