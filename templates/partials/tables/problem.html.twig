{% if app.user.title == "ROLE_SADMIN" %}
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">Numéro</th>
				<th scope="col">Nom</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for problem in problems %}
				<tr>
					<td>{{problem.entitle}}</td>
					<td>{{problem.name}}</td>
					<td class="py-1">{% set dataId = problem.id %}{% set dataLink = path('referentiel_problem_delete', {'id': problem.id,}) %}
						<a href="{{ path('referentiel_problem_modify', {'id': problem.id,}) }}" class="btn btn-sm btn-primary my-1" data-toggle="tooltip" data-placement="top" title="Modifier"><i class="far fa-edit"></i></a>
						{% include 'partials/modals/confirm.html.twig' %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endif %}

