<table class="table table-striped">
	<thead>
		<tr>
			<th class="col-1">Numéro</th>
			<th>Nom</th>
			<th>Compétences</th>
			{% if app.user.title == "ROLE_SADMIN" or app.user.title == "ROLE_ADMIN" %}
				<th scope="col" class="col-1">Actions</th>
			{% endif %}
		</tr>
	</thead>
	<tbody>
		{% for activity in activities %}
			<tr>
				<td>{{activity.entitle}}</td>
				<td>{{activity.name}}</td>
				<td>{{activity.skill}}</td>
				{% if app.user.title == "ROLE_SADMIN" or app.user.title == "ROLE_ADMIN" %}
					<td class="py-1">{% set dataId = activity.id %}{% set dataLink = path('referentiel_activity_delete', {'id': activity.id,}) %}
						<a href="{{ path('referentiel_activity_modify', {'id': activity.id,}) }}" class="btn btn-sm btn-primary my-1" data-toggle="tooltip" data-placement="top" title="Modifier"><i class="far fa-edit"></i></a>
						{% include 'partials/modals/confirm.html.twig' %}
					</td>
				{% endif %}
			</tr>
		{% endfor %}
	</tbody>
</table>