{% extends 'base.html.twig' %}

{% block body %}

	<h5>Mes classes</h5>
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">Diplôme</th>
				<th scope="col">Date de début</th>
				<th scope="col">Date de fin</th>
				<th scope="col">Etablissement</th>
				<th scope="col">Crée le</th>
				<th scope="col">Actif</th>
			</tr>
		</thead>
		<tbody>
			{% for classroom in teacher.classrooms %}
				<tr>
					<td><a href="{{ path('classroom_show', {'id': classroom.id}) }}">{{ classroom.degree }}</a></td>
					<td><a href="{{ path('classroom_show', {'id': classroom.id}) }}">{{ classroom.startDate }}</a></td>
					<td><a href="{{ path('classroom_show', {'id': classroom.id}) }}">{{ classroom.endDate }}</a></td>
					<td><a href="{{ path('establishment_show', {'id': classroom.establishment.id}) }}">{{ classroom.establishment.name }}</a></td>
					<td><a href="{{ path('classroom_show', {'id': classroom.id}) }}">{{ classroom.createdAt|date("d/m/Y") }}</a></td>
					<td><a class="{% if classroom.exist == 1 %}text-success{% else %}text-danger{% endif %}" href="{{ path('classroom_show', {'id': classroom.id}) }}">{% if classroom.exist == 1 %} oui {% else %} non {% endif %}</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% for classroom in teacher.classrooms %}
	<h5>Mes étudiants de {{ classroom.degree }}</h5>
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">Nom</th>
				<th scope="col">Prénom</th>
				<th scope="col">Email</th>
				<th scope="col">Etablissement</th>
				<th scope="col">Crée le</th>
				<th scope="col">Actif</th>
			</tr>
		</thead>
		<tbody>
			{% for student in classroom.students %}
				{% if student.classroom.id == classroom.id %}
				<tr>
					<td><a href="{{ path('student_show', {'id': student.id}) }}">{{ student.user.lastName }}</a></td>
					<td><a href="{{ path('student_show', {'id': student.id}) }}">{{ student.user.firstName }}</a></td>
					<td><a href="{{ path('student_show', {'id': student.id}) }}">{{ student.user.email }}</a></td>
					<td><a href="{{ path('establishment_show', {'id': student.establishment.id}) }}">{{ student.establishment.name }}</a></td>
					<td><a href="{{ path('student_show', {'id': student.id}) }}">{{ student.createdAt|date("d/m/Y") }}</a></td>
					<td><a class="{% if student.user.exist == 1 %}text-success{% else %}text-danger{% endif %}" href="{{ path('student_show', {'id': student.id}) }}">{% if student.user.exist == 1 %} oui {% else %} non {% endif %}</a></td>
				</tr>
				{% endif %}
			{% endfor %}
		</tbody>
	</table>
	{% endfor %}

{% endblock %}
